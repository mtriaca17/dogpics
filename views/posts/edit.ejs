<% layout('layouts/boilerplate') %>
<h1>Creating a new Post</h1>
<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input type="text" name="post[title]" id="title" value="<%= post.title %> " />
  </div>
  <div>
    <label for="image">Image</label>
    <input type="text" name="post[image]" id="image" value="<%= post.image %> " />
  </div>
  <div>
    <label for="description">Description</label>
    <textarea name="post[description]" id="description" cols="30" rows="10">
<%= post.description %> </textarea
    >
  </div>
  <button>Submit</button>
</form>
