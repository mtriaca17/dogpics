<% layout('layouts/boilerplate') %>
<div class="container my-10" id="container">
  <div class="columns is-multiline" id="post-box">
    <% for( let post of posts ) { %>
    <div class="column block is-one-third">
      <div class="box has-text-centered index-box">
        <a href="/posts/<%=post._id%>">
          <h4 class="title"><%= post.title %></h4>
          <figure class="image">
            <img src="<%= post.image %>" alt="" />
          </figure>
        </a>
        <a href="/posts/<%=post._id%>" class="card-footer-item">View Full Post!</a>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script src="/js/indexInfiniteScroll.js"></script>
